				+achi__item('img/achi_s_13.jpg', 'img/achi_s_13.jpg', 'img/achi_d_13.jpg')
				+achi__item('img/achi_s_14.jpg', 'img/achi_s_14.jpg', 'img/achi_d_14.jpg')
				+achi__item('img/achi_s_15.jpg', 'img/achi_s_15.jpg', 'img/achi_d_15.jpg')
				+achi__item('img/achi_s_16.jpg', 'img/achi_s_16.jpg', 'img/achi_d_16.jpg')


	//- More
	section.more
		.container
			.more__list.owl-carousel.owl-more#more

				include includes/index/mixins/more__item.pug

				+more__item('Delivery from 0$', 'Possible free delivery from $1000 orders.', 'delivery')
				+more__item('Ecological', 'All materials comply with environmental and safety standards.', 'eco')
				+more__item('100 % Payment secure', 'We accept Visa, Mastercard, Interac, Cash.', 'secure')

	//- Map
	section.map
		.bar
			.bar-wrap
				h3.bar__title Redeem exclusive offer
				a.bar__link
					span.bar__text.btn Details
					+icon('arrow', 'bar__svg')

		.container
			.section__head
				h3.section__title Find as on the map

			.map__wrap
				.map__frame#map
				.map__info
					.map__info-wrap
						.map__info-container
							.map__info-title Our adress:
							.map__info-text 41 Chemin du Tremblay, Boucherville, QC J4B 7L6 Canada

	//- Popup
	.popup#popup
		.popup__overlay
			.popup__container
				.popup__close-btn
					+icon('close', 'popup__close-svg')
				.popup__title Visit our showroom and we will pay taxes!
				.popup__list
					
					.popup__item
						.popup__text 100% best price

					.popup__item
						.popup__text Service 18 months
					
					.popup__item
						.popup__text Warranty 18 months

				form.popup__form#popup-form
					input.popup__input(type='text' name='name' placeholder='Your name *' autofocus)
					input.popup__input(type='tel' name='phone' placeholder='Phone *')
					button.popup__button Get a discount

